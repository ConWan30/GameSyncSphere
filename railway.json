{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "cd backend && npm install && echo 'Database URL configured' && npx prisma generate && node src/server.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "${{PORT}}",
        "DATABASE_URL": "${{DATABASE_URL}}",
        "ANTHROPIC_API_KEY": "${{ANTHROPIC_API_KEY}}",
        "FRONTEND_URL": "https://gamesyncsphere-analytics.vercel.app",
        "JWT_SECRET": "${{JWT_SECRET}}"
      }
    }
  }
}
